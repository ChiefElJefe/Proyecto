<odoo>
    <data>


        <record model="ir.ui.view" id="proyecto_ticket_tree">
            <field name="name">proyecto.ticket.tree</field>
            <field name="model">proyecto.ticket</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="subject"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="proyecto_ticket_form">
            <field name="name">proyecto.ticket.form</field>
            <field name="model">proyecto.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="subject"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="proyecto_ticket_kanban">
            <field name="name">proyecto.ticket.kanban</field>
            <field name="model">proyecto.ticket</field>
            <field name="arch" type="xml">
                <kanban string="Ticket">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="subject"/>
                            <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>
                                            Email: <field name="email"/>
                                        </li>
                                        <li>
                                            Subject: <field name="subject"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="proyecto_ticket_action">
            <field name="name">proyecto.ticket.action</field>
            <field name="res_model">proyecto.ticket</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem name="Tickets" id="proyecto_project_module.menu_root"/>

        <menuitem name="Ticket" id="proyecto_project_module.menu_1" parent="proyecto_project_module.menu_root"/>

        <menuitem name="Tickets" id="proyecto_project_module.menu_1_list" parent="proyecto_project_module.menu_1"
                  action="proyecto_ticket_action"/>

    </data>
</odoo>